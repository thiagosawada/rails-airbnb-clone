<div class="container">
  <div class="row show">
    <div class="col-xs-12 <%= @user.coach ? "col-md-8" : "col-md-12" %>">
      <div class="row">
        <div id="perfil">

          <div class="flex-box">
            <div id="avatar">

              <%= image_tag "http://placehold.it/100x100", class: "img-circle" %>
            </div>

            <div>
              <h4 id="nome"><i class="fa fa-user-o" aria-hidden="true"></i>
              <%= "#{@user.first_name} #{@user.last_name}"  %></h4>
              <p id="sobre"><strong><i class="fa fa-map-marker" aria-hidden="true"></i>
              </strong> <%= @user.user_city %></p>
              <p id="sobre"> <%= @user.about %></p>
              <p id="sobre"> <%= @user.facebook_picture_url %></p>
            </div>
          </div>



            <div id="category-description">
            <p><strong>Saiba mais sobre as modalidades que eu dou aula:</strong></p>
              <h5><%=@user.meetings.first.category%></h5>
              <p><%=@user.meetings.first.description%></p>
            </div>


        </div>
      </div>

      <div class="row">
        <div class="meetings show">
          <h5 class="text-center">Veja todos eventos cadastrados por esse coach:</h5>
          <div class="text-center">
            <% @user.meetings.each do |meeting| %>
              <%= render "card", meeting: meeting %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <% if @user.coach %>
      <div class="col-xs-12 col-md-4">
        <div class="reviews show">
          <div class="text-center">
            <h4>
              <i class="fa fa-star" aria-hidden="true" style="color: yellow;"></i>
              <i class="fa fa-star" aria-hidden="true" style="color: yellow;"></i>
              <i class="fa fa-star" aria-hidden="true" style="color: yellow;"></i>
              <i class="fa fa-star" aria-hidden="true" style="color: yellow;"></i>
              <i class="fa fa-star" aria-hidden="true" style="color: yellow;"></i>
            </h4>
          </div>
          <h4 class="text-center">Reviews</h4>

          <% 4.times do %>
            <%= render 'review' %>
          <% end %>
        </div>
      </div>
    <% end %>



  </div>
  <br>
  <%= link_to "Back home", root_path, class: "btn btn-primary" %>





