<div class="navbar-wagon">
 <!-- Logo -->
 <%= link_to root_path, class: "navbar-wagon-brand" do %>
   <%= image_tag ("http://res.cloudinary.com/dpg1ipkol/image/upload/v1502299574/logomakeme_vgatse.png") %>
 <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->
      <%= link_to "Atividades", meetings_path, class: "navbar-wagon-item navbar-wagon-link" %>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <%= image_tag avatar_url(current_user.facebook_picture_url), class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to user_path(current_user) do %>
                <i class="fa fa-user"></i> Perfil
              <% end %>
            </li>
            <li>
              <%= link_to root_path do %>
                <i class="fa fa-home"></i> Página inicial
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i> Sair
              <% end %>
            </li>
          </ul>
        </div>
      </div>

    <% else %>
      <%= link_to "Torne-se um instrutor", "#", class: "navbar-wagon-item navbar-wagon-link" %>
      <!-- Login link (when logged out) -->

      <%= link_to t(".sign_up", default: "Cadastre-se"), new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to t(".sign_in", default: "Entrar"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>

  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg navbar-font-color">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">

        <% if user_signed_in? %>

          <li>
            <%= link_to user_path(current_user) do %>
              <i class="fa fa-user"></i> Perfil
            <% end %>
          </li>
          <li>
            <%= link_to root_path do %>
              <i class="fa fa-home"></i> Página inicial
            <% end %>
          </li>
          <li>
            <%= link_to "#" do %>
              <i class="fa fa-trophy" aria-hidden="true"></i> Atividades
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
              <i class="fa fa-sign-out"></i> Sair
            <% end %>
          </li>

        <% else %>

          <li>
            <%= link_to "Torne-se um instrutor", "#", class: "navbar-wagon-item navbar-wagon-link" %>
          </li>
          <li>
            <%= link_to t(".sign_up", default: "Cadastre-se"), new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link" %>
          </li>
          <li>
            <%= link_to t(".sign_in", default: "Entrar"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
          </li>

        <% end %>

      </ul>
    </div>
  </div>
</div>
